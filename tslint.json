{
  "rulesDirectory": [
    "./node_modules/codelyzer"
  ],
  "extends": [
    "./node_modules/tslint/lib/configs/latest"
  ],
  "rules": {
    /* TSLint:latest overrides */
    "arrow-parens": false,
    "interface-name": [false],
    "max-line-length": [true, 140],
    "no-string-literal": false,
    "object-literal-sort-keys": false,
    "member-access": [true, "no-public"],
    "quotemark": [true, "single", "avoid-escape"],
    "trailing-comma": [false],
    "no-empty": false,
    "prefer-conditional-expression": false,
    "no-submodule-imports": false,

    /* Codelyzer rules */
    "directive-selector": [true, "attribute", ["csr"], "camelCase"],
    "component-selector": [true, "element", ["csr"], "kebab-case"],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref": true,
    "use-life-cycle-interface": true,
    "use-pipe-decorator": true,
    "use-pipe-transform-interface": true,
    "pipe-naming": [true, "camelCase", "csr"],
    "component-class-suffix": [true, "Component", "Page", "App"],
    "directive-class-suffix": [true, "Directive"]
  }
}
